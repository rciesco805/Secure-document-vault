# BF Fund Dataroom - Docker Environment Variables
# Copy this file to .env.docker and fill in the values

# =============================================================================
# DATABASE (Auto-configured by docker-compose)
# =============================================================================
DATABASE_URL=postgresql://postgres:postgres@db:5432/bf_fund_dataroom

# =============================================================================
# AUTHENTICATION (Required)
# =============================================================================
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=your-secret-here-generate-with-openssl

# URL where the app is accessible
NEXTAUTH_URL=http://localhost:3000

# Google OAuth (Required for admin login)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# =============================================================================
# STORAGE (Using MinIO in Docker)
# =============================================================================
STORAGE_PROVIDER=s3
STORAGE_ENDPOINT=http://minio:9000
STORAGE_BUCKET=bf-fund-dataroom
STORAGE_ACCESS_KEY_ID=minioadmin
STORAGE_SECRET_ACCESS_KEY=minioadmin
STORAGE_REGION=us-east-1

# Optional: Encryption key for stored documents (64-char hex string)
# Generate with: openssl rand -hex 32
STORAGE_ENCRYPTION_KEY=

# =============================================================================
# EMAIL (Using MailHog in Docker)
# =============================================================================
# For local development, emails are captured by MailHog
# View at: http://localhost:8025
SMTP_HOST=mailhog
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@localhost

# For production, use Resend:
# RESEND_API_KEY=

# =============================================================================
# EXTERNAL SERVICES (Optional for local development)
# =============================================================================

# Plaid (Banking/ACH) - Use sandbox for development
PLAID_CLIENT_ID=
PLAID_SECRET=
PLAID_ENV=sandbox

# Persona (KYC/AML) - Use sandbox for development
PERSONA_API_KEY=
PERSONA_WEBHOOK_SECRET=
PERSONA_TEMPLATE_ID=
PERSONA_ENVIRONMENT=sandbox

# Stripe (Payments) - Use test keys for development
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_PUBLISHABLE_KEY=

# =============================================================================
# ANALYTICS & MONITORING (Optional)
# =============================================================================
TINYBIRD_TOKEN=

# Rollbar (Error Monitoring)
ROLLBAR_SERVER_TOKEN=
NEXT_PUBLIC_ROLLBAR_CLIENT_TOKEN=

# =============================================================================
# ENVIRONMENT
# =============================================================================
NODE_ENV=development
